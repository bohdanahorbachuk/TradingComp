@model IEnumerable<ASPNET.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RowInsertTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RowUpdateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RowInsertTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RowUpdateTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID_Category" class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID_Category" class="btn btn-success">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID_Category" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
